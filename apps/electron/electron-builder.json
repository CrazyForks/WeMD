{
    "appId": "com.wemd.app",
    "productName": "WeMD",
    "directories": {
        "output": "dist"
    },
    "files": [
        "main.js",
        "preload.js",
        "assets/icon.svg",
        "../web/dist/**/*"
    ],
    "mac": {
        "category": "public.app-category.productivity",
        "target": [
            {
                "target": "dmg",
                "arch": [
                    "x64",
                    "arm64"
                ]
            },
            {
                "target": "zip",
                "arch": [
                    "x64",
                    "arm64"
                ]
            }
        ],
        "icon": "assets/icon.icns"
    },
    "dmg": {
        "title": "WeMD ${version}",
        "backgroundColor": "#ffffff"
    },
    "win": {
        "target": [
            "nsis",
            "zip"
        ],
        "icon": "assets/icon.ico"
    },
    "linux": {
        "target": [
            "AppImage",
            "deb"
        ],
        "category": "Office",
        "icon": "assets/icon.png"
    }
}
